<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.UserEditActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingTop="16dp"
            android:paddingRight="24dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/txt_title_username"
                style="@style/input_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/username" />

            <EditText
                android:id="@+id/field_username"
                style="@style/input_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/username"
                android:inputType="text|textNoSuggestions" />

            <TextView
                android:id="@+id/txt_title_first_name"
                style="@style/input_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/first_name" />

            <EditText
                android:id="@+id/field_first_name"
                style="@style/input_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/first_name"
                android:inputType="textNoSuggestions|textPersonName" />

            <TextView
                android:id="@+id/txt_title_last_name"
                style="@style/input_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/last_name" />

            <EditText
                android:id="@+id/field_last_name"
                style="@style/input_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/last_name"
                android:inputType="textNoSuggestions|textPersonName" />

            <TextView
                android:id="@+id/txt_title_email"
                style="@style/input_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/email" />

            <EditText
                android:id="@+id/field_email"
                style="@style/input_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/email"
                android:inputType="textNoSuggestions|textEmailAddress" />

            <LinearLayout
                android:id="@+id/fields_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_title_company"
                    style="@style/input_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/company_name" />

                <EditText
                    android:id="@+id/field_company_name"
                    style="@style/input_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/company_name"
                    android:inputType="text|textNoSuggestions" />

                <TextView
                    android:id="@+id/txt_title_description"
                    style="@style/input_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/description_optional" />

                <EditText
                    android:id="@+id/field_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/description"
                    android:inputType="textMultiLine|textNoSuggestions" />

                <Switch
                    android:id="@+id/switch_licensed"
                    style="@style/input_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/licensed_for_services" />

                <TextView
                    android:id="@+id/txt_title_phone"
                    style="@style/input_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/phone_number" />

                <EditText
                    android:id="@+id/field_phone"
                    style="@style/input_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/phone_number"
                    android:inputType="textNoSuggestions|phone" />

                <TextView
                    android:id="@+id/txt_title_address"
                    style="@style/input_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/address" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_title_unit"
                            style="@style/input_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/unit" />

                        <EditText
                            android:id="@+id/field_unit"
                            style="@style/input_field"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/unit"
                            android:inputType="text|textNoSuggestions" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_title_address3"
                            style="@style/input_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/number" />

                        <EditText
                            android:id="@+id/field_street_number"
                            style="@style/input_field"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="@string/number"
                            android:inputType="textNoSuggestions|number" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_title_street_name"
                    style="@style/input_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/street" />

                <EditText
                    android:id="@+id/field_street_name"
                    style="@style/input_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/street"
                    android:inputType="text|textNoSuggestions" />

                <TextView
                    android:id="@+id/txt_title_city"
                    style="@style/input_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/city" />

                <EditText
                    android:id="@+id/field_city"
                    style="@style/input_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/city"
                    android:inputType="text|textNoSuggestions" />

                <TextView
                    android:id="@+id/txt_title_province"
                    style="@style/input_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/province_territory"
                    android:textColor="@color/text_secondary_dark" />

                <Spinner
                    android:id="@+id/spinner_province"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/temp_string_array"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />

                <EditText
                    android:id="@+id/field_province_error"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="54dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:inputType="text"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/txt_title_country"
                    style="@style/input_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/country" />

                <EditText
                    android:id="@+id/field_country"
                    style="@style/input_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="@string/country"
                    android:inputType="text|textNoSuggestions"
                    android:text="@string/canada" />

                <TextView
                    android:id="@+id/txt_title_postal_code"
                    style="@style/input_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/postal" />

                <EditText
                    android:id="@+id/field_postal"
                    style="@style/input_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/postal"
                    android:inputType="text|textNoSuggestions" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_save_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:onClick="onSaveUserClick"
                android:text="@string/save" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>