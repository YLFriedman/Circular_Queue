<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="btn_danger"></style>

    <style name="panel_button">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/btn_bg_round_corners</item>
        <item name="android:drawableTop">@drawable/ic_users_light_75</item>
        <item name="android:padding">16dp</item>
        <item name="android:text">@string/button</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="input_field">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textColorHint">@color/text_secondary_dark</item>
    </style>

    <style name="input_label">
        <item name="android:textColor">@color/text_secondary_dark</item>
    </style>

    <style name="availability_grid_cell">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/btn_bg_avail_cell_bkrd_default</item>
    </style>

    <style name="availability_grid_cell.available" parent="availability_grid_cell">
        <item name="android:background">@drawable/btn_bg_avail_cell_bkrd_available</item>
    </style>

    <style name="availability_grid_cell.booked" parent="availability_grid_cell">
        <item name="android:background">@drawable/btn_bg_avail_cell_bkrd_booked</item>
    </style>

    <style name="availability_txt_time">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">top|left</item>
    </style>

</resources>
